<button id="scrape">Scrape</button>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">

    <!-- Modal -->
		<div id="resultsModal" class="modal fade" role="dialog">
		  <div class="modal-dialog">

		    <!-- Modal content-->
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h2 class="modal-title" id="title"><strong>Notes</strong></h2>
		      </div>
		      <div class="modal-body" id="modal-insert">
				    <h2 id="matchName"></h2>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      </div>
		    </div>

		  </div>
		</div>

    <ul>
      {{#each articles}}
            <li>
              <p data-id={{this._id}}>{{this.title}}</p>
              <a href={{this.link}}>{{this.link}}</a>
              <button data-id={{this._id}} class="unfavorite">Unfavorite</button>
            </li>
      {{/each}}
    </ul>
    </div>
  </div>
</div>
