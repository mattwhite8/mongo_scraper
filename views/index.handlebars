<button id="scrape">Scrape</button>
<button id="favorites"><a href="/favorites">Favorites</a></button>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">

    <!-- Modal -->
		<div id="resultsModal" class="modal fade" role="dialog">
		  <div class="modal-dialog">

		    <!-- Modal content-->
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
		        <h2 class="modal-title" id="title"><strong>Notes</strong></h2>
		      </div>
		      <div class="modal-body" id="modal-insert">
				    <h2>Notes</h2>
            <form>
              <div class="form-group">
                <label for="inputeNote">Add Note</label>
                <input type="text" class="form-control" id="inputNote" placeholder="Your thoughts...">
              </div>
              <button type="submit" class="btn btn-default" id="submitNote">Submit</button>
            </form>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      </div>
		    </div>

		  </div>
		</div>

    <ul>
      {{#each articles}}
            <li>
              <p data-id={{this._id}}>{{this.title}}</p>
              <a href={{this.link}}>{{this.link}}</a>
              <button data-id={{this._id}} class="favorite">Favorite</button>
            </li>
      {{/each}}
    </ul>
    </div>
  </div>
</div>
